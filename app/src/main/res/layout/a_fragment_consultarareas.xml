<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoshadow"
    android:orientation="vertical"
    tools:context=".ui_administrador.ConsultarAreas.ConsultarAreasF">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView83"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spnAr"
            android:layout_width="226dp"
            android:layout_height="30dp"
            android:background="@drawable/spinlarge1" />

        <TextView
            android:id="@+id/textView74"
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:text=" " />

        <Button
            android:id="@+id/btnBuscarAreaConsulta"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:background="@drawable/btnbuscarxx" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="489dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPacientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" " />

        <Button
            android:id="@+id/button11"
            android:layout_width="85dp"
            android:layout_height="49dp"
            android:background="@drawable/continuarbtn"
            android:text=" " />

        <TextView
            android:id="@+id/textView91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" " />
    </LinearLayout>


</LinearLayout>